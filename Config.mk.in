name		:= @pkg_name@

################ Programs ############################################

CC		:= @CC@
INSTALL		:= @INSTALL@
INSTALL_DATA	:= ${INSTALL} -m 644
INSTALL_PROGRAM	:= ${INSTALL} -m 700 -o root -g root -s

################ Destination #########################################

prefix		:= @prefix@
sbindir		:= @sbindir@
sysconfdir	:= @sysconfdir@
pamdir		:= @pamdir@
libdir		:= @libdir@
sysddir		:= @sysddir@
datadir		:= @datadir@
mandir		:= @mandir@
man1dir		:= @man1dir@
TMPDIR		:= @TMPDIR@
builddir	:= @builddir@/${name}
O		:= .o/

################ Compiler options ####################################

#debug		:= 1
libs		:= @pkglibs@ -lpam
ifdef debug
    cxxflags	:= -O0 -ggdb3
    ldflags	:= -g -rdynamic
else
    cxxflags	:= -Os -g0 -DNDEBUG=1
    ldflags	:= -s
endif
CXXFLAGS	:= -Wall -Wextra -Wredundant-decls -Wshadow
cxxflags	+= -std=c11 @pkgcflags@ ${CXXFLAGS}
ldflags		+= @pkgldflags@ ${LDFLAGS}
